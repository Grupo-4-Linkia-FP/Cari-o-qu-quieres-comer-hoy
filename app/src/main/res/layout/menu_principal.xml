<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MenuPrincipal">

    <!-- Contenido principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Botón de menú (superior izquierdo) -->
        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Menú"
            android:src="@drawable/ic_menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"/>

        <!-- Texto principal -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="306dp"
            android:layout_height="88dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/robotobold"
            android:text="¡Hola! ¿Qué quieres comer hoy?"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu_button" />

        <!-- Botón IR -->
        <LinearLayout
            android:id="@+id/btn_ir_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/selector_button"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintWidth_percent="0.7">

            <ImageView
                android:id="@+id/icon_ir"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="68dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_ir"
                android:contentDescription="Icono IR"/>

            <TextView
                android:id="@+id/btn_ir_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IR"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="@font/robotobold"/>
        </LinearLayout>

        <!-- Botón COCINAR -->
        <LinearLayout
            android:id="@+id/btn_cocinar_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/selector_button"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_ir_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintWidth_percent="0.7">

            <ImageView
                android:id="@+id/icon_cocinar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_cocinar"
                android:contentDescription="Icono Cocinar"/>

            <TextView
                android:id="@+id/btn_cocinar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COCINAR"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="@font/robotobold"/>
        </LinearLayout>

        <!-- Botón PEDIR -->
        <LinearLayout
            android:id="@+id/btn_pedir_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/selector_button"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_cocinar_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintWidth_percent="0.7">

            <ImageView
                android:id="@+id/icon_pedir"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="46dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_pedir"
                android:contentDescription="Icono Pedir"/>

            <TextView
                android:id="@+id/btn_pedir_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PEDIR"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="@font/robotobold"/>
        </LinearLayout>

        <!-- Botón ELIGE TÚ -->
        <LinearLayout
            android:id="@+id/btn_elige_tu_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/selector_button"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_pedir_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintWidth_percent="0.7">

            <ImageView
                android:id="@+id/icon_elige_tu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_elige_tu"
                android:contentDescription="Icono Elige Tú"/>

            <TextView
                android:id="@+id/btn_elige_tu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ELIGE TÚ"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="@font/robotobold"/>
        </LinearLayout>

        <!-- Menú inferior de navegación -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:menu="@menu/bottom_navigation_menu_principal"
            app:itemIconSize="36dp"
            app:itemIconTint="@color/white"
            app:labelVisibilityMode="unlabeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menú lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_navigation"
        android:background="@color/white" />

</androidx.drawerlayout.widget.DrawerLayout>
