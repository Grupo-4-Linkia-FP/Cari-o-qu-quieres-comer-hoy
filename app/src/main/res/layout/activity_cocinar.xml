<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CocinarActivity">

    <!-- Imagen Principal -->
    <ImageView
        android:id="@+id/main_image"
        android:layout_width="372dp"
        android:layout_height="301dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Imagen principal"
        android:src="@drawable/ic_cocinero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bot칩n Ver Recetas -->
    <Button
        android:id="@+id/btn_recetas"
        android:layout_width="288dp"
        android:layout_height="66dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/selector_button"
        android:text="Ver Recetas"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/main_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <!-- Bot칩n A침adir Recetas -->
    <Button
        android:id="@+id/btn_add_receta"
        android:layout_width="288dp"
        android:layout_height="66dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_button"
        android:text="A침adir Receta"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/btn_recetas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>