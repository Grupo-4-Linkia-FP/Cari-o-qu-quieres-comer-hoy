<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base usando Material3 DayNight -->
    <style name="Base.Theme.CQQCH" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Ajusta tus colores usando atributos globales.
             Estos colores se definen en colors.xml y colors-night.xml -->
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
    </style>

    <!-- Tema principal que hereda del tema base -->
    <style name="Theme.CQQCH" parent="Base.Theme.CQQCH">
        <!-- Ajustes para la barra de navegaciÃ³n y estado -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Usamos colorSurface en vez de color fijo -->
        <item name="android:statusBarColor">?attr/colorSurface</item>

        <!-- Indicar que en modo claro la barra de estado es clara.
        <item name="android:windowLightStatusBar">true</item>

        <!- Fondo de la ventana -->
        <item name="android:windowBackground">?attr/colorBackground</item>
    </style>

</resources>
