<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@drawable/gradient_background"
    tools:context=".actividades.AcercaDeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Contenedor Izquierdo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Logo -->
            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:contentDescription="Logo de la aplicación"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Contenedor Derecho -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:gravity="center_horizontal">

            <!-- Nombre de la app -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cariño qué quieres comer hoy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:textColor="?attr/colorOnBackground" />

            <!-- Versión de la app -->
            <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versión: 1.0.0"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:textColor="?attr/colorOnBackground" />

            <!-- Breve descripción -->
            <TextView
                android:id="@+id/app_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cariño, ¿qué quieres comer hoy? es tu asistente personal para encontrar y organizar recetas y restaurantes que se adapten a tus preferencias. ¡Haz tu experiencia culinaria inolvidable!"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="?attr/colorOnBackground" />

            <!-- Enlace de contacto -->
            <TextView
                android:id="@+id/contact_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contáctanos: grupoproyectodamgrupo4@gmail.com"
                android:textColor="@color/link_color"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <!-- Botón de Volver -->
            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/selector_button"
                android:text="Volver"
                android:textSize="18sp"
                android:textColor="?attr/colorOnBackground"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
