<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondocomidaland"
    tools:context=".NuevoUsuario">

    <TextView
        android:id="@+id/tvContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4D4D4D"
        android:padding="10dp"
        android:text="CONTRASEÑA"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/glmedio"
        app:layout_constraintEnd_toEndOf="@id/glderecha"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="@id/glizquierda"
        app:layout_constraintTop_toBottomOf="@id/glarriba"
        app:layout_constraintVertical_bias="0.709" />

    <Button
        android:id="@+id/btNuevoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4D4D4D"
        android:text="Nuevo usuario"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/glabajo"
        app:layout_constraintEnd_toEndOf="@id/glderecha"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@id/glizquierda"
        app:layout_constraintTop_toBottomOf="@id/glmedio"
        app:layout_constraintVertical_bias="0.6" />

    <EditText
        android:id="@+id/etContrasena"
        android:layout_width="425dp"
        android:layout_height="57dp"
        android:padding="16dp"
        android:background="#fffaf4"
        android:ems="10"
        android:hint="Ingrese su contraseña"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@id/glmedio"
        app:layout_constraintEnd_toEndOf="@id/glderecha"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="@id/glizquierda"
        app:layout_constraintTop_toBottomOf="@id/glarriba"
        app:layout_constraintVertical_bias="0.695" />

    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4D4D4D"
        android:padding="10dp"
        android:text="USUARIO"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/glmedio"
        app:layout_constraintEnd_toEndOf="@id/glderecha"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toStartOf="@id/glizquierda"
        app:layout_constraintTop_toBottomOf="@id/glarriba"
        app:layout_constraintVertical_bias="0.231" />

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="425dp"
        android:layout_height="57dp"
        android:padding="16dp"
        android:background="#fffaf4"
        android:ems="10"
        android:hint="Ingrese su usuario"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@id/glmedio"
        app:layout_constraintEnd_toEndOf="@id/glderecha"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="@id/glizquierda"
        app:layout_constraintTop_toBottomOf="@id/glarriba"
        app:layout_constraintVertical_bias="0.195" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabnuevousuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#969595"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/glabajo"
        app:layout_constraintEnd_toEndOf="@id/glderecha"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="@id/glizquierda"
        app:layout_constraintTop_toBottomOf="@id/glmedio"
        app:layout_constraintVertical_bias="0.702"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <!--Creamos las guias necesarias para ajustar el diseño horizontal-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glarriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glmedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glabajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glizquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glderecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />


</androidx.constraintlayout.widget.ConstraintLayout>